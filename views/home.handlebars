{{!-- Home/Landing Page --}}
<div class="bg-black h-screen flex items-center justify-center">
  <div class="container w-full sm:w-3/4 md:w-2/3 lg:w-1/2 xl:w-1/3 2xl:w-1/4 mx-auto">
    <h1 class="text-2xl sm:text-2xl md:text-3xl lg:text-5xl font-bold text-white">${welcome}.to += console.blog(!);</h1>
    <h2 id="typewriter" class="text-xl sm:text-1xl md:text-2xl text-yellow-500 my-3 h-8 lg:h-14 md:h-16"><span
        id="typing-text"></span><span class="cursor"></span></h2>

    <h3 class="text-sm sm:text-base md:text-lg lg:text-xl text-white mb-5">Share with the community your triumphs and
      failures, successes and hardships,
      challenging moments and those times you banged your head against your keyboard for hours on end out of
      frustration.
      Every story is important!</h3>
    <a href="/blog">
      <button class="bg-white text-black mt-4">
        <span
          class="bg-yellow-500 font-semibold block p-2 sm:p-3 md:p-4 lg:p-5 xl:p-6 2xl:p-7 -translate-x-2 -translate-y-2 border-black border-2 text-sm sm:text-base md:text-lg lg:text-xl xl:text-2xl 2xl:text-3xl hover:-translate-y-3 active:translate-x-0 active:translate-y-0 transition-all">Share
          a Story</span>
      </button>
    </a>
  </div>
</div>

<script src="/public/js/typewriter.js"></script>
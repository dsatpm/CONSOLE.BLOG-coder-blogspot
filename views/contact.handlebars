
{{!-- Contact Form --}}

<div class="flex justify-center items-center h-screen bg-gray-200">
  <form class="w-1/4">
   <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl text-center mb-3">Reach out</h2>
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="name">
        Name
      </label>
      <input
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        id="name"
        type="text"
        autocomplete="off"
        placeholder="First Name, Last Name"
      />
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="email">
        Email
      </label>
      <input
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        id="email"
        type="email"
        autocomplete="off"
        placeholder="your@email.com"
      />
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="message">
        Message
      </label>
      <textarea
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        id="message"
        rows="5"
        placeholder="Enter your message here..."
      ></textarea>
    </div>
    <div class="flex justify-center">
      <button
        class="bg-blue-900 hover:bg-blue-800 text-white font-bold py-2 px-4 w-1/4 rounded focus:outline-none focus:shadow-outline"
        type="button"
      >
        Send
      </button>
    </div>
  </form>
</div>

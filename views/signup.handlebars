{{!-- Signup Form --}}
<a href="/">
  <img src="/public/images/inverted-logo.png" alt="console.blog logo"
    class="absolute top-0 left-0 m-4 bg-cyan-500 text-black border-4 border-black neo-shadow w-[170px] h-[170px]" />
</a>
<div class="flex flex-col items-center justify-center min-h-screen py-6 bg-gray-500">
  <div class="w-full max-w-md bg-red-500 p-3  neo-shadow border-4 border-black">
    <div>
      <h2 class="mt-6 text-3xl font-extrabold text-center text-black">
        Sign up for an account
      </h2>
    </div>
    <form class="mt-8 space-y-6" id="signup-form" action="/signup" method="POST">
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <label for="username" class="sr-only">Username</label>
          <input name="username" type="username" autocomplete="off" id="user-signup" required
            class="appearance-none relative block w-full px-3 py-2 border   text-black sm:text-sm neo-shadow placeholder:text-black"
            placeholder="Username">
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
          <input name="password" type="password" autocomplete="current-password" id="pwd-signup" required
            class="appearance-none relative block w-full px-3 py-2 border placeholder-black text-black focus:z-10 sm:text-sm neo-shadow"
            placeholder="Password">
        </div>
      </div>

      <div>
        <button type="submit" class="text-black bg-black w-full ml-2">
          <span
            class="bg-violet-500 font-semibold block p-2 sm:p-3 md:p-4 lg:p-5 xl:p-6 2xl:p-7 -translate-x-2 -translate-y-2 border-black border-2 text-sm sm:text-base md:text-lg lg:text-xl xl:text-2xl 2xl:text-3xl hover:-translate-y-3 active:translate-x-0 active:translate-y-0 transition-all">
            Sign Up
          </span>
        </button>
        <div class="mt-6">
          <div class="text-center text-black">Already have an account?
            <a href="/login" class="font-medium text-white hover:underline">
              Sign In
            </a>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/public/js/signup.js"></script>
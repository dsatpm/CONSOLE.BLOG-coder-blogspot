<!-- 1. Container div for the blog section -->
<div class="container mx-auto px-4 py-8 h-screen">

  <!-- 2. Heading for the blog section -->
  <h2 class="text-3xl font-bold mb-4">Console.Blog(recentPosts.fromUsers);</h2>

  <!-- 3. Timeline div -->
  <div class="relative">

    <!-- 4. Blog post divs -->
    {{#each blogPosts}}
    <div class="border-l-2 border-gray-400 pl-4 mb-4">
      <h3 class="text-lg font-bold">{{this.title}}</h3>
      <p class="text-gray-800">{{this.content}}</p>
    </div>
    {{/each}}

  </div>

</div>